'.platform-darwin .workspace':
  # 'f12': 'window:toggle-dev-tools'
  'cmd-=': 'native!'
  'cmd-+': 'native!'
  'cmd--': 'native!'
  'cmd-_': 'native!'
  'cmd-q': 'maybs-quit:toggle'
  # 'cmd-s': 'custom:save'
  'cmd-h': 'null'
  'cmd-k cmd-[': 'window:focus-pane-on-left'
  'cmd-k cmd-]': 'window:focus-pane-on-right'

'.platform-linux .workspace .editor':
  'ctrl-space': 'non-navigation:move-right'
  # Basic
  'ctrl-alt-t': 'editor:transpose'
  # Duplicate and Comment
  # 'ctrl-alt-/': 'duplicate-and-comment:duplicateAndComment'
  # 'ctrl-r': 'goto:file-symbol'
  # 'ctrl-shift-t': 'goto:project-symbol'
  # 'ctrl-alt-down': 'goto:declaration'
  'alt-k': 'subword-navigation:delete-right'

'.platform-darwin .workspace .editor':
  'cmd-space': 'non-navigation:move-right'
  # Basic
  # Duplicate and Comment
  # 'ctrl-cmd-/': 'duplicate-and-comment:duplicateAndComment'
  # 'ctrl-r': 'goto:file-symbol'
  # 'ctrl-shift-t': 'goto:project-symbol'
  # 'ctrl-alt-down': 'goto:declaration'
  'cmd-left': 'editor:move-to-beginning-of-word'
  'cmd-right': 'editor:move-to-end-of-word'
  'cmd-shift-left': 'editor:select-to-beginning-of-word'
  'cmd-shift-right': 'editor:select-to-end-of-word'
  'alt-left': 'editor:move-to-first-character-of-line'
  'alt-right': 'editor:move-to-end-of-screen-line'
  'alt-shift-left': 'editor:select-to-first-character-of-line'
  'alt-shift-right': 'editor:select-to-end-of-line'
  'cmd-backspace': 'editor:delete-to-beginning-of-word'
  'alt-backspace': 'editor:delete-to-beginning-of-line'
  'cmd-g': 'go-to-line:toggle'
  'ctrl-g': 'find-and-replace:find-next'
  'ctrl-alt-k': 'subword-navigation:delete-right'
  'cmd-up': 'editor:move-line-up'
  'cmd-down': 'editor:move-line-down'

